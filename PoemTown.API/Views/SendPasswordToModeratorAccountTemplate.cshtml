@model PoemTown.Service.BusinessModels.ViewTemplateModels.SendPasswordToModeratorAccount

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moderator Account Created</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }
        .container {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
        }
        h1 {
            color: #333;
        }
        p {
            color: #555;
        }
        .password {
            font-size: 18px;
            font-weight: bold;
            color: #d9534f;
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Welcome to PoemTown!</h1>
    <p>Dear @Model.FullName,</p>
    <p>Your moderator account has been successfully created by the admin.</p>
    <p>Here are your credentials:</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Temporary Password:</strong> <span class="password">@Model.Password</span></p>
    <p>Please log in and change your password as soon as possible.</p>
    <p>Best regards,<br>PoemTown Team</p>
</div>
</body>
</html>